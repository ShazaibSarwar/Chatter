<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shazaibsarwar.chatter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_chatter_app_icon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chatter_app_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chatter"
        android:usesCleartextTraffic="true">
        <activity android:name=".All_Activites.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".All_Activites.CallingActivity" />
        <activity android:name=".All_Activites.ChatActivity" />
        <activity android:name=".All_Activites.SetupProfileActivity" />
        <activity
            android:name=".All_Activites.OTP_Activity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".All_Activites.EntringPhoneNo_Activity"
            android:windowSoftInputMode="stateVisible"></activity>
        <activity android:name=".All_Activites.MainActivity" />
    </application>

</manifest>